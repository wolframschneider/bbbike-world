#!/bin/sh
# Copyright (c) 2009-2023 Wolfram Schneider, https://bbbike.org
#
# test if all programs are installed
#

set -e
PATH="/usr/local/bin:/bin:/bin:/usr/bin"; export PATH

commands_general="
bash
gzip
bzip2
buffer
mbuffer
curl
git
iconv
java
make
perltidy
python
rsync
time
wget
xargs
"

commands_bbbike="
osmium
osmium_toogr2
osmium2shape
osmconvert
osmconvert-wrapper
jsbeautifier
jsmin
osmosis
generator_tool
"

commands="$commands_general $commands_bbbike"

tmpdirs="/bbbike/tmp /tmp $BBBIKE_TMPDIR $BBBIKE_TMPFS"
for c in $tmpdirs
do
   if [ ! -d $c ]; then
	echo "missing temp directory: $c" >&2
	error=1
   fi
done

for c in $commands
do
    if which $c >/dev/null; then
        :
    else
        echo "missing command $c" >&2
        error=1
    fi
done

commands_optional="
pigz
pbzip2
pixz
"
for c in $commands_optional
do
    if which $c >/dev/null; then
        :
    else
        echo "missing optional command: $c" >&2
    fi
done

# md5
if ( which md5 || which md5sum ) >/dev/null; then :
else
   echo "missing command: md5" >&2
   error=1
fi

exit $error

#EOF
