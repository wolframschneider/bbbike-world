#!/usr/bin/make -f
# -*- makefile -*-
# Sample debian/rules that uses debhelper.
# This file was originally written by Joey Hess and Craig Small.
# As a special exception, when this file is copied by dh-make into a
# dh-make output file, you may use that output file without restriction.
# This special exception was added by Craig Small in version 0.37 of dh-make.

# Uncomment this to turn on verbose mode.
export DH_VERBOSE=1
export DH_OPTIONS


JAVALIBS_TARBALL=	bbbike-world-bin-1.6.0.tar.gz omim-1.0.tar.gz Maperitive-2.4.1.tar.gz bbbike-world-compat-squeeze-1.0.tar.gz
HOMEPAGE_TARBALL=	https://debian.bbbike.org
JAVALIBS_DIR=	/var/lib/bbbike/opt

clean: 
	dh_testdir
	dh_testroot
	dh_clean

install:
	dh_testdir
	#dh_testroot
	#dh_prep
	dh_installdirs

	mkdir -p $(CURDIR)/debian/src
	cd $(CURDIR)/debian/src; \
	  for i in ${JAVALIBS_TARBALL}; do \
		if ! test -e $$i; then \
		  echo "download ${HOMEPAGE_TARBALL}/src/$$i"; \
		  curl -sSf ${HOMEPAGE_TARBALL}/src/$$i > $$i.tmp; \
		  mv -f $$i.tmp $$i; \
		fi; \
	  done

	rm -rf $(CURDIR)/debian/tmp/${JAVALIBS_DIR}
	mkdir -p $(CURDIR)/debian/tmp/${JAVALIBS_DIR}
	for i in ${JAVALIBS_TARBALL}; do \
	  echo "extract $$i"; \
	  gzip -dc $(CURDIR)/debian/src/$$i | tar -C$(CURDIR)/debian/tmp/${JAVALIBS_DIR} -xf -; \
	done

	dh_install
	mv $(CURDIR)/debian/tmp/* $(CURDIR)/debian/bbbike-world-bin-misc/

build: install

binary: 
	dh_testdir
	dh_testroot
	dh_installchangelogs 
	dh_link
	dh_compress
	dh_fixperms
	dh_gencontrol
	dh_md5sums
	dh_builddeb

.PHONY: build clean binary install 

#%:
#	dh $@ 

